<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">


    <LinearLayout
        android:id="@+id/arayuz"
        android:layout_width="wrap_content"
        android:layout_height="449dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/genelArayuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:id="@+id/carCurt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/buttonAC"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickAC"
                    android:text="AC"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#D4D4D2"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/buttonSign"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickSign"
                    android:text="+/-"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#D4D4D2"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:text="%"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#D4D4D2"
                    app:layout_column="0"
                    app:layout_row="0" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/satir1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickSev"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickEig"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickNin"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="2"
                    app:layout_row="0" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/satir2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickFou"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="0" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickFiv"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickSix"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="2"
                    app:layout_row="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/satir3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickOne"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickTwo"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickThr"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="2"
                    app:layout_row="2" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/SifirVeNokta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="@dimen/sifirBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:onClick="onClickZer"
                    android:text=" 0"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="0"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/buttonPoint"
                    android:layout_width="@dimen/butonBoyutu"
                    android:layout_height="@dimen/butonBoyutu"
                    android:layout_margin="@dimen/marginBoyutu"
                    android:background="@drawable/round_button"
                    android:text="."
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/yaziBoutu"
                    app:backgroundTint="#505050"
                    app:layout_column="2"
                    app:layout_row="2" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/isaretler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="@dimen/butonBoyutu"
                android:layout_height="@dimen/butonBoyutu"
                android:layout_margin="@dimen/marginBoyutu"
                android:background="@drawable/round_button"
                android:onClick="onClickDivide"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/yaziBoutu"
                app:backgroundTint="#FF9500" />

            <Button
                android:layout_width="@dimen/butonBoyutu"
                android:layout_height="@dimen/butonBoyutu"
                android:layout_margin="@dimen/marginBoyutu"
                android:background="@drawable/round_button"
                android:onClick="onClickMultiply"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/yaziBoutu"
                app:backgroundTint="#FF9500" />

            <Button
                android:layout_width="@dimen/butonBoyutu"
                android:layout_height="@dimen/butonBoyutu"
                android:layout_margin="@dimen/marginBoyutu"
                android:background="@drawable/round_button"
                android:onClick="onClickSubtract"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/yaziBoutu"
                app:backgroundTint="#FF9500" />

            <Button
                android:layout_width="@dimen/butonBoyutu"
                android:layout_height="@dimen/butonBoyutu"
                android:layout_margin="@dimen/marginBoyutu"
                android:background="@drawable/round_button"
                android:onClick="onClickAdd"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/yaziBoutu"
                app:backgroundTint="#FF9500" />

            <Button
                android:layout_width="@dimen/butonBoyutu"
                android:layout_height="@dimen/butonBoyutu"
                android:layout_margin="@dimen/marginBoyutu"
                android:background="@drawable/round_button"
                android:onClick="onClickEqual"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="@dimen/yaziBoutu"
                app:backgroundTint="#FF9500" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/sonuclar"
        android:layout_width="366dp"
        android:layout_height="112dp"
        android:gravity="center_vertical"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/arayuz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/sonuclar2"
        android:layout_width="181dp"
        android:layout_height="27dp"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/sonuclar"
        app:layout_constraintStart_toEndOf="@+id/gulme"
        app:layout_constraintTop_toTopOf="@+id/sonuclar" />

    <TextView
        android:id="@+id/gulme"
        android:layout_width="185dp"
        android:layout_height="27dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/sonuclar2"
        app:layout_constraintStart_toStartOf="@+id/sonuclar"
        app:layout_constraintTop_toTopOf="@+id/sonuclar" />


</androidx.constraintlayout.widget.ConstraintLayout>


